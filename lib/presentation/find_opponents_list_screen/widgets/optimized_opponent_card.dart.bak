class OptimizedOpponentCard extends StatefulWidget {
  final UserProfile user;
  final VoidCallback? onRefresh; // Optional for better decoupling
  final ValueChanged<bool>? onFollowChanged; // Better callback pattern
  final bool enableCaching; // Control caching behavior
  final bool showActivityIndicator; // Control UI features

  const OptimizedOpponentCard({
    super.key,
    required this.user,
    this.onRefresh,
    this.onFollowChanged,
    this.enableCaching = true,
    this.showActivityIndicator = true,
  });

  @override
  State<OptimizedOpponentCard> createState() => _OptimizedOpponentCardState();
}

class _OptimizedOpponentCardState extends State<OptimizedOpponentCard>
    with SingleTickerProviderStateMixin {
  final UserService _userService = UserService();
  
  bool _isFollowing = false;
  bool _isLoading = true;
  bool _isProcessing = false;
  
  // Animation controller for micro-interactions
  late AnimationController _animationController;
  late Animation<double> _scaleAnimation;
  
  // Cache for follow status to avoid redundant API calls
  static final Map<String, bool> _followStatusCache = {};
  
  @override
  void initState() {
    super.initState();
    _initAnimations();
    _checkFollowStatus();
  }
  
  void _initAnimations() {
    _animationController = AnimationController(
      duration: const Duration(milliseconds: 200),
      vsync: this,
    );
    _scaleAnimation = Tween<double>(
      begin: 1.0,
      end: 0.95,
    ).animate(CurvedAnimation(
      parent: _animationController,
      curve: Curves.easeInOut,
    ));
  }

  @override
  void dispose() {
    _animationController.dispose();
    super.dispose();
  }

  /// ðŸš€ MUSK: Smart follow status check with caching
  Future<void> _checkFollowStatus() async {
    try {
      // Check cache first if caching is enabled
      if (widget.enableCaching && _followStatusCache.containsKey(widget.user.id)) {
        if (mounted) {
          setState(() {
            _isFollowing = _followStatusCache[widget.user.id]!;
            _isLoading = false;
          });
        }
        return;
      }
      
      final isFollowing = await _userService.isFollowingUser(widget.user.id);
      
      // Cache result if caching enabled
      if (widget.enableCaching) {
        _followStatusCache[widget.user.id] = isFollowing;
      }
      
      if (mounted) {
        setState(() {
          _isFollowing = isFollowing;
          _isLoading = false;
        });
      }
    } catch (e) {
      ProductionLogger.error(
        'ðŸ” Follow status check failed for ${widget.user.id}: $e', 
        tag: 'optimized_opponent_card'
      );
      if (mounted) {
        setState(() => _isLoading = false);
      }
    }
  }

  /// ðŸš€ MUSK: Optimized follow toggle with debouncing
  Future<void> _toggleFollow() async {
    if (_isProcessing) return;
    
    // Haptic feedback for better UX
    try {
      _animationController.forward().then((_) {
        _animationController.reverse();
      });
    } catch (e) {
      // Ignore haptic feedback errors
    }

    if (mounted) {
      setState(() => _isProcessing = true);
    }

    try {
      final wasFollowing = _isFollowing;
      
      if (_isFollowing) {
        await _userService.unfollowUser(widget.user.id);
      } else {
        await _userService.followUser(widget.user.id);
      }
      
      final newFollowStatus = !wasFollowing;
      
      // Update cache
      if (widget.enableCaching) {
        _followStatusCache[widget.user.id] = newFollowStatus;
      }
      
      if (mounted) {
        setState(() {
          _isFollowing = newFollowStatus;
          _isProcessing = false;
        });
        
        // Show success feedback only for follow
        if (newFollowStatus) {
          _showFollowSuccessSnackbar();
        }
      }
      
      // Notify parent with new status
      widget.onFollowChanged?.call(newFollowStatus);
      
      ProductionLogger.info(
        'ðŸ‘¥ User ${newFollowStatus ? "followed" : "unfollowed"}: ${widget.user.displayName}',
        tag: 'optimized_opponent_card'
      );
      
    } catch (e) {
      ProductionLogger.error('ðŸ‘¥ Follow toggle failed: $e', tag: 'optimized_opponent_card');
      
      if (mounted) {
        _showErrorSnackbar(
          'KhÃ´ng thá»ƒ ${_isFollowing ? "bá» theo dÃµi" : "theo dÃµi"} ${widget.user.displayName}'
        );
      }
    } finally {
      if (mounted) {
        setState(() => _isProcessing = false);
      }
    }
  }

  /// Show follow success snackbar with better UX
  void _showFollowSuccessSnackbar() {
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Row(
          children: [
            const Icon(
              Icons.check_circle,
              color: Color(0xFF42B72A),
              size: 20,
            ),
            const SizedBox(width: 8),
            Text(
              'âœ… ÄÃ£ theo dÃµi ${widget.user.displayName}',
              style: TextStyle(fontFamily: _getSystemFont()),
            ),
          ],
        ),
        duration: const Duration(milliseconds: 2000),
        behavior: SnackBarBehavior.floating,
        backgroundColor: Colors.black87,
        margin: const EdgeInsets.all(16),
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(8),
        ),
      ),
    );
  }
  
  /// Show error snackbar with retry functionality
  void _showErrorSnackbar(String message) {
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Row(
          children: [
            const Icon(Icons.error_outline, color: Colors.white, size: 20),
            const SizedBox(width: 8),
            Expanded(
              child: Text(
                message,
                style: TextStyle(fontFamily: _getSystemFont()),
              ),
            ),
          ],
        ),
        backgroundColor: Colors.red.shade700,
        behavior: SnackBarBehavior.floating,
        margin: const EdgeInsets.all(16),
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(8),
        ),
        action: SnackBarAction(
          label: 'Thá»­ láº¡i',
          textColor: Colors.white,
          onPressed: _toggleFollow,
        ),
      ),
    );
  }

