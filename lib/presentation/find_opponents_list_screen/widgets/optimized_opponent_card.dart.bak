  void _showChallengeModal(String challengeType) {
    showModalBottomSheet(
      context: context,
      isScrollControlled: true,
      backgroundColor: Colors.transparent,
      builder: (context) => ModernChallengeModal(
        player: {
          'id': widget.user.id,
          'display_name': widget.user.displayName,
          'avatar_url': widget.user.avatarUrl,
          'rank': widget.user.rank,
          'elo_rating': widget.user.eloRating,
          'total_wins': widget.user.totalWins,
          'total_losses': widget.user.totalLosses,
        },
        challengeType: challengeType,
      ),
    ).then((_) {
      // Smart callback - only refresh if needed
      widget.onRefresh?.call();
    });
  }

  String _getSystemFont() {
    try {
      if (Platform.isIOS) {
        return '.SF Pro Display';
      } else {
        return 'Roboto';
      }
    } catch (e) {
      return 'Roboto';
    }
  }

  /// Clear follow status cache (useful for logout/login)
  static void clearCache() {
    _followStatusCache.clear();
  }
  
  /// Get cached follow status for a user
  static bool? getCachedFollowStatus(String userId) {
    return _followStatusCache[userId];
  }
